{{!-- Container principal centralizado --}}
<div class="container py-4">
  <h2 class="mb-4 text-center">Equipamentos Cadastrados</h2>
  <div class="row justify-content-center">
    {{#if equipamento.length}}
      {{#each equipamento}}
        <div class="col-md-8 col-lg-7 mb-4">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                  {{#if brand}}
                    <img src="/img/brands/{{lowercase brand}}.png" alt="{{brand}}" class="rounded" style="width:48px;height:48px;margin-right:15px;box-shadow:0 2px 6px rgba(0,0,0,0.1);background:#f6f6f6;">
                  {{else}}
                    <img src="/img/brands/default.png" alt="Marca" class="rounded" style="width:48px;height:48px;margin-right:15px;">
                  {{/if}}
                  <div>
                    <h5 class="card-title mb-1 fw-bold">{{brand}} <span class="fw-light">- {{model}}</span></h5>
                    <span class="text-muted small">#{{id}}</span>
                  </div>
                </div>
                <span class="badge px-3 py-2 fs-6 {{#if (eq status "online")}}bg-success{{else}}bg-danger{{/if}}">
                  {{#if (eq status "online")}}<i class="bi bi-check-circle"></i>{{else}}<i class="bi bi-x-circle"></i>{{/if}} {{status}}
                </span>
              </div>
              <div class="row mb-2">
                <div class="col-6">
                  <p class="mb-1"><strong>Número de Série:</strong> {{serieNumber}}</p>
                </div>
                <div class="col-6">
                  <p class="mb-1"><strong>IP:</strong> <span class="badge bg-light text-dark">{{ip}}</span></p>
                </div>
              </div>
              <div class="d-flex gap-2 mb-3">
                <a href="/equipamento/{{id}}/adicionar-oid" class="btn btn-outline-primary btn-sm">
                  <i class="bi bi-plus-circle"></i> Adicionar OID
                </a>
                <a href="/equipamento/{{id}}/editar" class="btn btn-outline-secondary btn-sm">
                  <i class="bi bi-pencil"></i> Editar
                </a>
                <a href="/equipamento/{{id}}/excluir" class="btn btn-outline-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este equipamento?')">
                  <i class="bi bi-trash"></i> Excluir
                </a>
              </div>
              {{#if oids.length}}
                <div class="table-responsive mt-3">
                  <table class="table table-sm table-bordered align-middle mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>OID</th>
                        <th>Descrição</th>
                        <th>Máscara</th>
                        <th>Tipo</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each oids}}
                        <tr>
                          <td><span class="badge bg-info text-dark">{{oid}}</span></td>
                          <td>{{description}}</td>
                          <td>{{mask}}</td>
                          <td>{{type}}</td>
                        </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              {{else}}
                <p class="text-muted mt-3"><em>Nenhuma OID cadastrada para este equipamento.</em></p>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="col-lg-6">
        <div class="alert alert-warning text-center" role="alert">
          Nenhum equipamento cadastrado.
        </div>
        <div class="d-flex justify-content-center">
          <a href="/config" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Cadastrar Equipamento
          </a>
        </div>
      </div>
    {{/if}}
  </div>
</div>